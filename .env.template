# ===================================================================
# Neutrino Energy Pipeline - Environment Configuration Template
# ===================================================================
# Copy this file to .env and fill in your actual values
# Never commit the .env file to version control!

# ===================================================================
# ELECTRICITY MAPS API CONFIGURATION
# ===================================================================
# Get your API token from: https://app.electricitymaps.com/dashboard
ELECTRICITY_MAPS_TOKEN=your_electricity_maps_api_token_here

# ===================================================================
# MONGODB CONFIGURATION
# ===================================================================
MONGO_HOST=mongodb
MONGO_PORT=27017
MONGO_DATABASE=neutrino_energy
MONGO_USERNAME=neutrino_user
MONGO_PASSWORD=your_secure_mongo_password_here

# MongoDB Root User (for initialization)
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=your_secure_admin_password_here

# ===================================================================
# POSTGRESQL CONFIGURATION
# ===================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DATABASE=neutrino_energy
POSTGRES_USERNAME=neutrino_user
POSTGRES_PASSWORD=your_secure_postgres_password_here

# PostgreSQL Root User (for initialization)
POSTGRES_ROOT_PASSWORD=your_secure_postgres_admin_password_here

# ===================================================================
# GRAFANA CONFIGURATION
# ===================================================================
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_grafana_password_here

# ===================================================================
# APPLICATION CONFIGURATION
# ===================================================================
# Application environment
ENVIRONMENT=production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Pipeline execution frequency (in seconds)
PIPELINE_INTERVAL=3600

# Data retention policy (in days)
DATA_RETENTION_DAYS=90

# ===================================================================
# DOCKER CONFIGURATION
# ===================================================================
# Docker Compose project name
COMPOSE_PROJECT_NAME=neutrino-energy

# Timezone
TZ=Europe/Istanbul

# ===================================================================
# MONITORING & ALERTS (Optional)
# ===================================================================
# Email configuration for alerts
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
ALERT_EMAIL=admin@yourcompany.com

# ===================================================================
# SECURITY CONFIGURATION
# ===================================================================
# JWT Secret for API authentication (if implemented)
JWT_SECRET=your_super_secret_jwt_key_here

# API Rate limiting
API_RATE_LIMIT_PER_MINUTE=60

# ===================================================================
# PERFORMANCE TUNING
# ===================================================================
# Worker processes
WORKER_PROCESSES=2

# Memory limits
POSTGRES_SHARED_BUFFERS=256MB
POSTGRES_EFFECTIVE_CACHE_SIZE=1GB

# Connection pooling
POSTGRES_MAX_CONNECTIONS=100
MONGO_MAX_POOL_SIZE=50
